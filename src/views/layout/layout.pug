    //color theme
    link(rel="stylesheet" href="styles/color-theme.min.css")
    //common styles
    link(rel="stylesheet" href="styles/common.min.css")
    //helper
    link(rel="stylesheet" href="styles/js-helper.min.css")
    block style

  body
    block variables
    .wrapper
      include ../blocks/header
      include ../blocks/mobile-nav
      //main
      main.main(class=content!==undefined?content:'')
        //breadcrumbs
        block breadcrumbs
        //page content
        .content
          block content
      include ../blocks/footer
    
    include ../blocks/popups

    //helper(ONLY for dev)
    include ../blocks/js-helper
    
    //jquery
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js')
    //libs
    script(src="js/libs/current-device.min.js")
    script(src="js/libs/scroll-lock.min.js")
    script(src="js/libs/slick.min.js")
    script(src="js/libs/lazysizes.min.js")
    script(src="js/libs/inputmask.min.js")
    script(src="js/libs/validate.min.js")
    script(src="js/libs/simplebar.min.js")
    script(src="js/libs/jquery.selectric.min.js")
    script(src="js/libs/ion.rangeSlider.min.js")
    //scripts
    script(src="js/scripts.min.js")
    //helper
    script(src="js/js-helper.min.js")
    block scripts