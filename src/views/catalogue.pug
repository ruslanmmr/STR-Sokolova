extends layout/layout
  
block title
  title Каталог
block breadcrumbs 
  -var title = 'Каталог'
  include blocks/breadcrumbs

block content
  section.section.container
    h1 Утеплитель и изоляция
    .sorting-heading
      .sorting-heading__container
        .sorting-heading__items
          a(href="#").button.button_style-1.sorting-heading__download-button
            svg.icon
              use(xlink:href="img/icons/icons-sprite.svg#document")
            span Скачать прайс-лист
          .line-sorting.d-none.d-md-block
            .line-sorting__container
              span.sorting-heading__title.line-sorting__title Вид:
              .line-sorting__buttons
                a(href="javascript:void(0);").button.button_style-1.line-sorting__view-toggle.line-sorting__view-toggle_grid
                  svg.icon
                    use(xlink:href="img/icons/icons-sprite.svg#ico-grid")
                a(href="javascript:void(0);").button.button_style-1.line-sorting__view-toggle.line-sorting__view-toggle_row
                  svg.icon
                    use(xlink:href="img/icons/icons-sprite.svg#ico-row")

        .line-sorting.d-none.d-lg-block
          .line-sorting__container
            span.sorting-heading__title.line-sorting__title Сортировка:
            ul.line-sorting__list
              li.line-sorting__item
                a(href="#").line-sorting__link.active
                  svg.icon
                    use(xlink:href="img/icons/icons-sprite.svg#sorting-up")
                  | Цена (по возрастанию)
              li.line-sorting__item
                a(href="#").line-sorting__link
                  svg.icon
                    use(xlink:href="img/icons/icons-sprite.svg#sorting-down")
                  | Цена (по убыванию)
              li.line-sorting__item
                a(href="#").line-sorting__link Наличие
              li.line-sorting__item
                a(href="#").line-sorting__link Популярность

        
        .select-sorting.d-block.d-lg-none
          .select-sorting__container
            span.sorting-heading__title.select-sorting__title Сортировка:
            .row
              .col-sm-6.col
                select.select.select_style-1
                  option(value="1") Цена (по возрастанию)
                  option(value="2") Цена (по убыванию)
                  option(value="3" selected) Наличие
                  option(value="4") Популярность
              .col-sm-6.col-auto
                a(href="#filter" data-fixed-toggle).button.button_style-2.select-sorting__button
                  svg.icon
                    use(xlink:href="img/icons/icons-sprite.svg#filter")
                  span Фильтр
    .row
      aside.aside.col-xl-20pc.col-lg-3
        //FILTER
        #filter.filter

          -var index = 0
          mixin checkbox(title, count)
            .checkbox.filter-section__item
              input(type="checkbox" id=index).checkbox__input
              label(for=index).checkbox__label=title
                span.checkbox__count=count
            -index++

          .filter__head
            .container
              h2.filter__title Фильтры 
              a(href="javascript:void(0);" data-fixed-close).filter__close
                svg.icon
                  use(xlink:href="img/icons/icons-sprite.svg#close-light")
          .filter__container.scrollbar.scrollbar_mobile-only
            .scrollbar__content
              .scrollbar__inner.filter__inner
                .filter__sections
                  //section
                  .filter-section.toggle-section.active
                    .filter-section__head.container.toggle-section__head
                      h3.filter-section__title Материал
                        .button.button_style-1.button_rounded-arrow 
                          svg.icon
                            use(xlink:href="img/icons/icons-sprite.svg#arrow-down-bold")
                    .filter-section__content.toggle-section__content.scrollbar.scrollbar_style-2
                      .filter-section__content-inner.container.scrollbar__content
                        .filter-section__items.scrollbar__inner
                          +checkbox('Стройматериалы', '12')
                          +checkbox('Столярные изделия', '3')
                          +checkbox('Стройматериалы', '12')
                          +checkbox('Столярные изделия', '3')
                  //section
                  .filter-section.toggle-section.active
                    .filter-section__head.container.toggle-section__head
                      h3.filter-section__title Цвет
                        .button.button_style-1.button_rounded-arrow 
                          svg.icon
                            use(xlink:href="img/icons/icons-sprite.svg#arrow-down-bold")
                    .filter-section__content.toggle-section__content.scrollbar.scrollbar_style-2
                      .filter-section__content-inner.container.scrollbar__content
                        .filter-section__items.scrollbar__inner
                          +checkbox('Стройматериалы', '12')
                          +checkbox('Столярные изделия', '3')
                          +checkbox('Стройматериалы', '12')
                          +checkbox('Столярные изделия', '3')
                          +checkbox('Стройматериалы', '12')
                          +checkbox('Столярные изделия', '3')
                          +checkbox('Стройматериалы', '12')
                          +checkbox('Столярные изделия', '3')
                          +checkbox('Стройматериалы', '12')
                          +checkbox('Столярные изделия', '3')
                          +checkbox('Стройматериалы', '12')
                          +checkbox('Столярные изделия', '3')
                  //section
                  .filter-section.toggle-section
                    .filter-section__head.container.toggle-section__head
                      h3.filter-section__title Производитель
                        .button.button_style-1.button_rounded-arrow 
                          svg.icon
                            use(xlink:href="img/icons/icons-sprite.svg#arrow-down-bold")
                    .filter-section__content.toggle-section__content.scrollbar.scrollbar_style-2
                      .filter-section__content-inner.container.scrollbar__content
                        .filter-section__items.scrollbar__inner
                          .radio.filter-section__item
                            input(type="radio" id='ddfgdgd' name='dddd').radio__input
                            label(for='ddfgdgd').radio__label Значение
                              span.checkbox__count 3
                          .radio.filter-section__item
                            input(type="radio" id='dsdsds' name='dddd').radio__input
                            label(for='dsdsds').radio__label Кирпич
                              span.checkbox__count 12
                          .radio.filter-section__item
                            input(type="radio" id='dfgq1b' name='dddd').radio__input
                            label(for='dfgq1b').radio__label Дерево
                              span.checkbox__count 3
                  //section
                  .filter-section.toggle-section
                    .filter-section__head.container.toggle-section__head
                      h3.filter-section__title Особые отметки
                        .button.button_style-1.button_rounded-arrow 
                          svg.icon
                            use(xlink:href="img/icons/icons-sprite.svg#arrow-down-bold")
                    .filter-section__content.toggle-section__content.scrollbar.scrollbar_style-2
                      .filter-section__content-inner.container.scrollbar__content
                        .filter-section__items.scrollbar__inner
                          +checkbox('Стройматериалы', '12')
                          +checkbox('Столярные изделия', '3')
