                          +checkbox('Стройматериалы', '12')
                          +checkbox('Столярные изделия', '3')
                  //section
                  .filter-section.filter-range.container
                    .row
                      .col-lg-12.col-sm-6
                        .filter-range__item
                          input(type="text" name="range-1" data-min="0" data-max="1000").js-range
                        .filter-range__inputs
                          .input.filter-range__input
                            input(type="number" name='ddd' value='1').input__element.filter-range__input-from
                          .input.filter-range__input
                            input(type="number" name='ddd' value='1').input__element.filter-range__input-to
                  
                .filter__buttons
                  .container
                    .row
                      .col-lg-12.col-sm-6
                        button.button.button_style-2.filter__button Применить
                      .col-lg-12.col-sm-6
                        a(href="javascript:void(0);").button.button_style-1.filter__button.filter__reset Очистить
    
        .d-none.d-lg-block
          include blocks/advertising
          include blocks/advertising
      .col-xl.col-lg-9
        .row.grid.catalogue-blocks
          include blocks/cards
          -var grid = 'grid__block col-xl-3 col-md-4 col-sm-6'
          +card4(true, grid, 4, 'Фанера ФК 18х1525х1525 мм сорт 4/4')
          +card4(false, grid, 1, 'Фанера ФК 18х1525х1525 мм сорт 4/4')
          +card4(false, grid, 2, 'Фанера ФК')
          +card4(true, grid, 3, 'Фанера ФК')
          +card4(true, grid, 1, 'Фанера ФК 18х1525х1525 мм сорт 4/4')
          +card4(true, grid, 3, 'Фанера ФК')
          +card4(false, grid, 1, 'Фанера ФК 18х1525х1525 мм сорт 4/4')
          +card4(true, grid, 1, 'Фанера ФК 18х1525х1525 мм сорт 4/4')
          +card4(true, grid, 4, 'Фанера ФК 18х1525х1525 мм сорт 4/4')
          +card4(false, grid, 2, 'Фанера ФК')
          +card4(true, grid, 3, 'Фанера ФК')
          +card4(false, grid, 1, 'Фанера ФК 18х1525х1525 мм сорт 4/4')
          +card4(true, grid, 1, 'Фанера ФК 18х1525х1525 мм сорт 4/4')
          +card4(true, grid, 3, 'Фанера ФК')
          +card4(false, grid, 1, 'Фанера ФК 18х1525х1525 мм сорт 4/4')
          +card4(true, grid, 1, 'Фанера ФК 18х1525х1525 мм сорт 4/4')
        -var paginationAlignLeft = true
        include blocks/pagination

  section.section.container
    h2.section__title Хиты продаж
    .slider.slider_grid.slider_arrows.row.product-slider
      include blocks/cards
      +card4(true, 'col', 4, 'Фанера ФК 18х1525х1525 мм сорт 4/4')
      +card4(false, 'col', 2, 'Фанера ФК')
      +card4(true, 'col', 3, 'Фанера ФК')
      +card4(false, 'col', 1, 'Фанера ФК 18х1525х1525 мм сорт 4/4')
      +card4(true, 'col', 1, 'Фанера ФК 18х1525х1525 мм сорт 4/4')
      +card4(true, 'col', 3, 'Фанера ФК')
      +card4(false, 'col', 1, 'Фанера ФК 18х1525х1525 мм сорт 4/4')
        +card4(true, 'col', 1, 'Фанера ФК 18х1525х1525 мм сорт 4/4')

  -var formTitle = 'Станьте нашим партнёром'
  include blocks/form

  section.section
    .container
      .row.justify-content-center
        .col-xl-10
          h2 Почему мы лучше продаем стройматериалы
          p Инвестируем в заводы, производящие листовые строительные материалы (ДСП ЦСП ФАНЕРА, ОСБ и т.д.) заключаем договора, выкупаем партии продукции, везем вагонами или фурами на склад и после поставляют постоянным клиентам типа “Красной цены”, “Сатурна”, “Центр строя” и т.д. Если есть товар в наличии и их цена ниже, то мы продаем, если нет — то продают конкуренты.